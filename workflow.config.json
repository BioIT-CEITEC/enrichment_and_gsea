{
  "workflow_description": {
    "name": "enrichment_and_gsea",
    "version": 1.0,
    "label": "Gene enrichment and GSEA",
    "type": "gene_enrichment",
    "inputs": "results/DE_{analysis_type}/{comparison}/{biotype}/DESeq2.tsv",
    "outputs": [
      "results/DE_{analysis_type}/{comparison}/{biotype}/enrichment_*/*",
      "logs/all_samples/{comparison}.{biotype}.DE_{analysis_type}.enrichment_*.log",
      "results/DE_{analysis_type}/{comparison}/{biotype}/GSEA_*/*",
      "logs/all_samples/{comparison}.{biotype}.DE_{analysis_type}.GSEA_*.log"
    ],
    "report_index": "results/DE_{analysis_type}/{comparison}/{biotype}/enrichment_gsea.html",
    "reports":["results/DE_{analysis_type}/{comparison}/{biotype}/enrichment_gsea_report.html"]
  },
  "general_params": [
    "sample_name",
    "organism",
    "species",
    "organism_go",
    "organism_kegg",
    "organism_reactome",
    "organism_wp"
  ],
  "requested_params": [
    "feature_count",
    "RSEM",
    "reference",
    "comparison",
    "biotype"
  ],
  "gui_params": {
    "primary": {
      "onthology": {
        "label": "Run Gene Onthology enrichment",
        "type": "bool",
        "default": true
      },
      "kegg": {
        "label": "Run KEGG pathways enrichment",
        "type": "bool",
        "default": true
      },
      "reactome": {
        "label": "Run EACTOME pathways enrichment",
        "type": "bool",
        "default": true
      },
      "wikipathways": {
        "label": "Run WikiPathways enrichment",
        "type": "bool",
        "default": true
      },
      "cutoff_log2fc_enrich": {
        "label": "Log2FC cut-off to sort DESeq2 result before enrichment",
        "type": "string",
        "default": "1"
      },
      "cutoff_padj_enrich": {
        "label": "Adjusted p-value cut-off to sort DESeq2 result before enrichment",
        "type": "string",
        "default": "0.05"
      },
      "cutoff_log2fc_gsea": {
        "label": "Log2FC cut-off to sort DESeq2 result before GSEA",
        "type": "string",
        "default": "0"
      },
      "cutoff_padj_gsea": {
        "label": "Adjusted p-value cut-off to sort DESeq2 result before GSEA",
        "type": "string",
        "default": "1"
      },
      "n_up": {
        "label": "Number of enriched genes",
        "type": "int",
        "default": 15
      },
      "n_down": {
        "label": "Number of enriched genes (down regulated for GSEA)",
        "type": "int",
        "default": 15
      },
      "colors" : {
        "label": "Colors",
        "type": "enum",
        "default": "col1",
        "list": {
          "col1": "firebrick:white:royalblue",
          "col2": "firebrick3:lemonchiffon:springgreen4",
          "col3": "firebrick3:lemonchiffon:steelblue",
          "col4": "red3:white:gray25",
          "col5": "darkorange2:white:mediumpurple4",
          "col6": "mediumorchid4:white:springgreen4",
          "col7": "violetred:white:olivedrab",
          "col8": "sienna:white:turquoise4"
        }
      }
    },
    "detailed": {
      "enrich_padj": {
        "label": "Enrichment adjusted p-value cut-off",
        "type": "string",
        "default": "0.1"
      },
      "enrich_padjmethod": {
        "label": "Enrichment adjusted p-value method",
        "type": "enum",
        "default": "BH",
        "list": {
          "BH": "BH",
          "BY": "BY",
          "fdr": "fdr",
          "holm": "holm",
          "hochberg": "hochberg",
          "hommel": "hommel",
          "bonferroni": "bonferroni",
          "none": "none"
        }
      },
      "enrich_minGSSize": {
        "label": "Enrichment minimal size of genes annotated",
        "type": "string",
        "default": "2"
      },
      "enrich_maxGSSize": {
        "label": "Enrichment maximal size of genes annotated",
        "type": "string",
        "default": "Inf"
      },
      "gsea_padj": {
        "label": "GSEA adjusted p-value cut-off",
        "type": "string",
        "default": "0.1"
      },
      "gsea_padjmethod": {
        "label": "GSEA adjusted p-value method",
        "type": "enum",
        "default": "BH",
        "list": {
          "BH": "BH",
          "BY": "BY",
          "fdr": "fdr",
          "holm": "holm",
          "hochberg": "hochberg",
          "hommel": "hommel",
          "bonferroni": "bonferroni",
          "none": "none"
        }
      },
      "gsea_minGSSize": {
        "label": "GSEA minimal size of genes annotated",
        "type": "string",
        "default": "2"
      },
      "gsea_maxGSSize": {
        "label": "GSEA maximal size of genes annotated",
        "type": "string",
        "default": "Inf"
      },
      "gsea_eps": {
        "label": "GSEA boundary for p-value calculation",
        "type": "string",
        "default": "0"
      },
      "gsea_nPermSimple": {
        "label": "GSEA Number of permutations for preliminary estimation of p-values",
        "type": "int",
        "default": 10000
      },
      "gsea_by": {
        "label": "GSEA Number of permutations for preliminary estimation of p-values",
        "type": "enum",
        "default": "fgsea",
        "list": {
          "fgsea": "fgsea",
          "DOSE": "DOSE"
        }
      }
    }
  }
}