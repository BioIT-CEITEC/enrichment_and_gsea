{
  "workflow_description": {
    "name": "enrichment_gsea",
    "version": 1.0,
    "label": "Gene enrichment and GSEA",
    "type": "gene_enrichment",
    "inputs": "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/all/DESeq2.tsv",
    "outputs": [
      "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/enrichment/*",
      "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/enrichment/logs/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired"
  ],
  "gui_params": {
    "primary": {
      "organism": {
        "label": "Organism",
        "type": "enum",
        "default": "human",
        "list": {
          "human": "human",
          "mouse": "mouse"
        }
      },
      "cutoff_log2fc": {
        "label": "Log2FC cut-off",
        "type": "float",
        "default": 1
      },
      "cutoff_padj": {
        "label": "Adjusted p-value cut-off",
        "type": "string",
        "default": "0.05"
      },
      "enrich_padj": {
        "label": "Enrichment adjusted p-value cut-off",
        "type": "string",
        "default": "0.1"
      },
      "gsea_padj": {
        "label": "GSEA adjusted p-value cut-off",
        "type": "string",
        "default": "0.1"
      },
      "n_up": {
        "label": "Number of enriched genes",
        "type": "int",
        "default": 15
      },
      "n_down": {
        "label": "Number of enriched genes (down regulated for GSEA)",
        "type": "int",
        "default": 15
      },
      "colors" : {
        "label": "Colors",
        "type": "enum",
        "default": "red_white_blue",
        "list": {
          "red_white_blue": "firebrick:white:royalblue",
          "red_yellow_green": "firebrick3:lemonchiffon:springgreen4",
          "red_yellow_blue": "firebrick3:lemonchiffon:steelblue",
          "red_white_grey": "red3:white:gray25",
          "orange_purple": "darkorange2:gray97:mediumpurple4",
          "purple_green": "mediumorchid4:gray97:springgreen4",
          "pink_green": "violetred:gray97:olivedrab",
          "brown_blue": "sienna:gray96:turquoise4",
          "custom": "custom colors"
        }
      },
      "custom_colors": {
        "label": "Custom colors (color +:color 0:color -)",
        "type": "string",
        "default": "firebrick:white:royalblue",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "colors": "custom"
            }
          }
        }
      }
    }
  }
}