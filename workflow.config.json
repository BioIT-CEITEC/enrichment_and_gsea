{
  "workflow_description": {
    "name": "enrichment_gsea",
    "version": 1.0,
    "label": "Gene enrichment and GSEA",
    "type": "gene_enrichment",
    "inputs": "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/all/DESeq2.tsv",
    "outputs": [
      "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/enrichment/*",
      "mRNA_DE_{de_analysis}/{condA}_vs_{condB}/enrichment/logs/*"
    ],
    "report_index": "qc_reports/all_samples/alignment_RNA_multiqc/multiqc.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired"
  ],
  "gui_params": {
    "primary": {
      "organism": {
        "label": "Organism",
        "type": "enum",
        "default": "human",
        "list": {
          "human": "human",
          "mouse": "mouse"
        }
      },
      "cutoff_log2fc": {
        "label": "Log2FC cut-off",
        "type": "float",
        "default": 1
      },
      "cutoff_padj": {
        "label": "Adjusted p-value cut-off",
        "type": "float",
        "default": 0.05
      },
      "enrich_padj": {
        "label": "Enrichment adjusted p-value cut-off",
        "type": "float",
        "default": 0.1
      },
      "gsea_padj": {
        "label": "GSEA adjusted p-value cut-off",
        "type": "float",
        "default": 0.1
      },
      "n_up": {
        "label": "Number of enriched genes",
        "type": "int",
        "default": 15
      },
      "n_down": {
        "label": "Number of enriched genes (down regulated for GSEA)",
        "type": "int",
        "default": 15
      },
      "colors" : {
        "label": "Colors",
        "type": "enum",
        "default": "classic_rev",
        "list": {
          "classic_unstd": "Classic Unstranded",
          "classic_fwd": "Classic Forward",
          "classic_rev": "Classic Reverse",
          "quant_fwd": "QuantSeq FWD",
          "quant_rev": "QuantSeq REV",
          "sense": "Lexogen SENSE",
          "corall": "Lexogen CORALL"
        }
      },
      "type_of_extraction": {
        "label": "Type of extraction",
        "type": "enum",
        "default": "PolyA",
        "list": {
          "PolyA": "PolyA",
          "rRNA": "rRNA"
        }
      }
    },
    "detailed": {
      "trim_adapters": {
        "label": "Trim adapters",
        "type": "string",
        "default": ""
      },
      "mark_duplicates": {
        "label": "Mark duplicates",
        "type": "bool",
        "default": true
      },
      "umi_usage": {
        "label": "UMI usage",
        "type": "enum",
        "default": "mark_duplicates",
        "list": {
          "no": "Don't use UMI",
          "mark_duplicates": "Mark duplicates"
        }
      },
      "remove_duplicates": {
        "label": "Remove duplicates",
        "type": "bool",
        "default": true
      },
      "keep_not_markDups_bam": {
        "label": "Keep not_markDups_bam file",
        "type": "bool",
        "default": false
      },
      "max_intron": {
        "label": "Max intron",
        "type": "int",
        "default": 1000000
      },
      "strandness": {
        "label": "Strandness",
        "type": "string",
        "default": "unstr",
        "conditions": {
          "value": {
            "RNAseq_type": {
              "classic_fwd": "fwd",
              "classic_rev": "rev",
              "quant_fwd": "fwd",
              "quant_rev": "fwd",
              "sense": "rev"
            }
          }
        }
      },
      "trim_left1": {
        "label": "Trim left 1",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_fwd": 12,
              "sense": 9
            },
            "UMI": {
              "Quantseq FWD": 6
            }
          }
        }
      },
      "trim_left2": {
        "label": "Trim left 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_rev": 12,
              "sense": 6
            }
          }
        }
      },
      "trim_right1": {
        "label": "Trim right 1",
        "type": "int",
        "default": 0
      },
      "trim_right2": {
        "label": "Trim right 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "UMI": {
              "CORALL": 9
            }
          }
        }
      },
      "map_score": {
        "label": "Map score",
        "type": "string",
        "default": "0.66"
      },
      "map_perc": {
        "label": "Map perc",
        "type": "string",
        "default": "0.66"
      },
      "perc_mismatch": {
        "label": "Perc mismatch",
        "type": "string",
        "default": "0.66"
      },
      "min_length": {
        "label": "Min length",
        "type": "int",
        "default": 35
      },
      "RSEM": {
        "label": "RSEM",
        "type": "bool",
        "default": false
      }
    }
  }
}