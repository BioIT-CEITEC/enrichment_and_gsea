{
  "workflow_description": {
    "name": "enrichment_and_gsea",
    "version": 1.0,
    "label": "Gene enrichment and GSEA",
    "type": "gene_enrichment",
    "inputs": "results/*/{comparison}/{biotype}/DESeq2.tsv",
    "outputs": [
      "results/*/{comparison}/enrichment*/*",
      "results/*/{comparison}/enrichment*/logs/*",
      "results/*/{comparison}/GSEA*/*",
      "results/*/{comparison}/GSEA*/logs/*"
    ],
    "report_index": "results/{comparison}/{biotype}/DESeq2.tsv",
    "reports":[
      "results/{comparison}/{biotype}/*/*.pdf",
      "results/{comparison}/{biotype}/*/*.svg",
      "results/{comparison}/{biotype}/*/*.png"
    ]
  },
  "general_params": [
    "samples"
  ],
  "requested_params": [
    "feature_count",
    "RSEM",
    "conditions_to_compare",
    "biotypes",
    "reference",
    "ref_from_trans_assembly"
  ],
  "gui_params": {
    "primary": {
      "cutoff_log2fc": {
        "label": "Log2FC cut-off",
        "type": "string",
        "default": "1"
      },
      "cutoff_padj": {
        "label": "Adjusted p-value cut-off",
        "type": "string",
        "default": "0.05"
      }
    }
  }
}